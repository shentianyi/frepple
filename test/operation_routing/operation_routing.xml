    -->
    <demand name="order 3a">
      <quantity>1</quantity>
      <due>2009-02-10T00:00:00</due>
      <priority>3</priority>
      <item name="product" />
      <location name="factory"/>
    </demand>
    <demand name="order 3b">
      <quantity>1</quantity>
      <due>2009-02-10T00:00:00</due>
      <priority>4</priority>
      <item name="product" />
      <location name="factory"/>
    </demand>

    <!--
      Case 4: Capacity constraint on middle routing step
    -->
    <demand name="order 4a">
      <quantity>1</quantity>
      <due>2009-02-20T00:00:00</due>
      <priority>5</priority>
      <item name="product" />
      <location name="factory"/>
    </demand>
    <demand name="order 4b">
      <quantity>1</quantity>
      <due>2009-02-20T00:00:00</due>
      <priority>6</priority>
      <item name="product" />
      <location name="factory"/>
    </demand>

    <!--
      Case 5: Capacity constraint on total routing
    -->
    <demand name="order 5a">
      <quantity>1</quantity>
      <due>2009-03-20T00:00:00</due>
      <priority>7</priority>
      <item name="product" />
      <location name="factory"/>
    </demand>
    <demand name="order 5b">
      <quantity>1</quantity>
      <due>2009-03-20T00:00:00</due>
      <priority>8</priority>
      <item name="product" />
      <location name="factory"/>
    </demand>
    <demand name="order 5c">
