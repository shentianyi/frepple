      <priority>9</priority>
      <item name="product" />
      <location name="factory"/>
    </demand>

    <!--
      Case 6: Material constraint on first routing step.
    -->
    <demand name="order 6">
      <quantity>10</quantity>
      <due>2009-04-20T00:00:00</due>
      <priority>10</priority>
      <item name="product" />
      <location name="factory"/>
    </demand>

    <!--
